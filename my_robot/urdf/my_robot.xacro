<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />

  <gazebo reference="chassis">
    <material>Gazebo/Orange</material>
  </gazebo>
  
  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  
   <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

   <gazebo reference="camera">
    <material>Gazebo/Red</material>
  </gazebo>

  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <!-- Use the STL files for the chassis -->
  <link name="chassis">
    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    
    <collision name="chassis_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://my_robot/meshes/chasis.stl" scale="1 1 1"/>
      </geometry>
    </collision>
    
    <visual name="chassis_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://my_robot/meshes/chasis.stl" scale="1 1 1"/>
      </geometry>
      <material name="">
        <color rgba="1 0.5 0 1"/>
      </material>
    </visual>
  </link>
  
  
  <!-- Left Wheel Link -->
  <link name="left_wheel">
      <collision>
          <geometry>
              <cylinder radius="0.034" length="0.025"/>
          </geometry>
          <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      </collision>
      <inertial>
          <mass value="5"/>
          <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
      </inertial>
      <visual>
          <geometry>
              <cylinder radius="0.034" length="0.025"/>
          </geometry>
          <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
          <material name="">
            <color rgba="0.1 0.1 0.1 1"/>
          </material>
      </visual>
  </link>

  <!-- Right Wheel Link -->
  <link name="right_wheel">
      <collision>
          <geometry>
              <cylinder radius="0.034" length="0.025"/>
          </geometry>
          <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      </collision>
      <inertial>
          <mass value="5"/>
          <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
      </inertial>
      <visual>
          <geometry>
              <cylinder radius="0.034" length="0.025"/>
          </geometry>
          <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
          <material name="">
            <color rgba="0.1 0.1 0.1 1"/>
          </material>
      </visual>
  </link>

  <!-- Differential Drive Joints -->
  
  <!-- Left Wheel Joint -->
  <joint type="continuous" name="left_wheel_hinge">
      <origin xyz="0 0.12 0.0225" rpy="0 0 0"/>
      <child link="left_wheel"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- Right Wheel Joint -->
  <joint type="continuous" name="right_wheel_hinge">
      <origin xyz="0 -0.12 0.0225" rpy="0 0 0"/>
      <child link="right_wheel"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
  </joint>


  <!-- Camera Link -->
  <link name="camera">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name="camera_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual name="camera_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Camera Joint -->
  <joint name="camera_joint" type="fixed">
    <origin xyz="0.17 0 0.03" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="camera"/>
    <axis xyz="0 1 0"/>
  </joint>
  
  <link name="camera_link">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>
  </link>

  <!-- Camera Link Joint -->
  <joint name="camera_link_joint" type="fixed">
    <origin xyz="0.17 0 0.05" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="camera_link"/>
  </joint>

  <!-- Camera Optical Link and Joint -->
  <joint name="camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.5707 0 -1.5707"/>
    <parent link="camera_link"/>
    <child link="camera_link_optical"/>
  </joint>

  <link name="camera_link_optical">
  </link>
  
  <!-- Hokuyo Lidar Link -->
  <link name="hokuyo">
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name="hokuyo_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name="hokuyo_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>

  <!-- Hokuyo Joint -->
  <joint name="hokuyo_joint" type="fixed">
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="hokuyo"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>

